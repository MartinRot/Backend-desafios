<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
    <!-- <link rel="stylesheet" href="../public/css/styles.css">" -->
</head>

<body>

    <div class="container">

        <h2>Productos</h2>
 
        <% if(productos.length > 0){ %>

        <table class="table" style="max-width: 1000px; text-align: center;">

            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>

            <tbody>

                <% productos.forEach(function(producto){ %>

                <tr>
                    <th scope="row"><%= contador %></th>
                    <td><%= producto.name %></td>
                    <td>$<%= producto.price %></td>
                    <td><img width="100" src=<%= producto.thumbnail %> alt="Imagen miniatura"></td>
                </tr>

                <% contador++}) %>

            </tbody>
        </table>

        <% } else { %>
        <h2>No hay productos</h2>
        <% } %>
        
        <button class="btn btn-success" style="margin-top: 10px;"><a href="/" class="text-white">Volver</a></button>
 
    </div>

</body>

</html>